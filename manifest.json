{
  "manifest_version": 3,
  "name": "CSES to GitHub Committer",
  "version": "1.1",
  "description": "Automatically commit successful CSES submissions to GitHub.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["https://cses.fi/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://cses.fi/problemset/result/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
